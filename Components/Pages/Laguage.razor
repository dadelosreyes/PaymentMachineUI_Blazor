@page "/Language"
@using BlazorBootstrap
@inject NavigationManager NavigationManager

<header class="text-white py-2">
    <div class="container-fluid mb-5">
        <div class="row align-items-center">
            <div class="col-2">
            </div>
            <div class="col-8 text-center d-flex align-items-center justify-content-center">
                 <img src="/assets/logo.png" alt="Zameco Logo" class="me-3"
                     style="width: 60px; height: auto; margin-top: 40px;">
                <div>
                    <h1 class="mt-5" style="font-size: 25px; color: #DC0000">Z A M E C O II</h1>
                    <p style="color: #DC0000; font-size: 8px;">ZAMBALES II ELECTRIC COOPERATIVE, INC.</p>
                </div>
            </div>
            <div class="col-2 text-end">
            </div>
        </div>
    </div>
</header>

<body>
    <div class="container-fluid mt-5 d-flex align-items-center justify-content-center">
        <div class="text-center">
            <div class="content-area p-5 m-5">
                <a href="Login"><button class="m-3 p-3 btn btn-dark">English</button></a>
                <a href="Login"><button class="m-3 p-3 btn btn-secondary">Tagalog</button></a>
            </div>
        </div>
    </div>

</body>

@if (showTerms)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Terms and Conditions</h5>
                </div>
                <div class="modal-body">
                    <p>Welcome to Zameco II. By using this service, you agree to the following terms and conditions:</p>
                    <ol>
                        <li>You must be a registered customer of Zameco II to use this service.</li>
                        <li>The account number you enter must be associated with your Zameco II account.</li>
                        <li>You are responsible for maintaining the confidentiality of your account information.</li>
                        <li>Zameco II reserves the right to modify or terminate the service at any time.</li>
                        <li>By using this service, you consent to the collection and use of your data as described in our Privacy Policy.</li>
                    </ol>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="DeclineTerms">Decline</button>
                    <button type="button" class="btn btn-primary" @onclick="AcceptTerms">Accept</button>
                </div>
            </div>
        </div>
    </div>
}


@code {
    private bool showTerms = true;
    protected override void OnInitialized()
    {
        showTerms = true;
    }
    private void AcceptTerms()
    {
        showTerms = false;
    }

    private void DeclineTerms()
    {
        NavigationManager.NavigateTo("/");
    }
  
}
