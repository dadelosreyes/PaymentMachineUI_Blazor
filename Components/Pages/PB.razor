@page "/PB"

<div class="min-h-screen bg-pink-50 flex items-center justify-center p-4">
    <div class="w-full max-w-3xl bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="text-center p-6 bg-white">
            <h1 class="text-3xl font-bold text-red-600">ZAMECO II</h1>
            <p class="text-lg text-gray-600">Zambales Electric Cooperative, Inc.</p>
        </div>
        <div class="p-6 space-y-6">
            <div class="space-y-2">
                <label for="bill-select" class="text-xl font-semibold text-gray-700">Select your bill:</label>
                <select @bind="SelectedBill" id="bill-select" class="w-full text-2xl h-16 border-2 border-gray-300 rounded-lg px-4">
                    <option value="">Choose a bill</option>
                    <option value="09/29/2024">09/29/2024 - ₱1325.00</option>
                    @* Add more bills as needed *@
                </select>
            </div>

            @if (!string.IsNullOrEmpty(SelectedBill))
            {
                <div class="bg-blue-50 p-4 rounded-lg">
                    <h3 class="text-xl font-semibold mb-2">Selected Bill:</h3>
                    <p class="text-lg">Date: @SelectedBill</p>
                    <p class="text-2xl font-bold">Amount: ₱1325.00</p>
                </div>
            }

            <div class="bg-green-50 p-4 rounded-lg">
                <h3 class="text-xl font-semibold mb-2">Please insert your payment</h3>
                <p class="text-3xl font-bold">Total amount inserted: ₱@InsertedAmount.ToString("F2")</p>
            </div>

            <div class="grid grid-cols-2 gap-4">
                <button @onclick="() => InsertAmount(100)" class="text-xl py-6 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
                    Insert ₱100
                </button>
                <button @onclick="() => InsertAmount(500)" class="text-xl py-6 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
                    Insert ₱500
                </button>
            </div>
        </div>
        <div class="flex justify-between p-6 bg-gray-100">
            <button @onclick="Cancel" class="text-xl py-6 px-8 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-colors">
                Cancel
            </button>
            <button @onclick="Proceed" class="text-xl py-6 px-8 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors">
                Proceed
            </button>
        </div>
    </div>

    <button @onclick="ShowHelp" class="fixed bottom-4 right-4 text-xl bg-gray-200 p-2 rounded-full hover:bg-gray-300 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="sr-only">Help</span>
    </button>
</div>

@code {
    private string SelectedBill { get; set; } = "";
    private decimal InsertedAmount { get; set; } = 0;

    private void InsertAmount(int amount)
    {
        InsertedAmount += amount;
    }

    private void Cancel()
    {
        // Implement cancel logic
    }

    private void Proceed()
    {
        // Implement proceed logic
    }

    private void ShowHelp()
    {
        // Implement help logic
    }
}